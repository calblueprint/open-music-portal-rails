html {
  overflow-x: hidden;
  font-family: 'Open Sans Condensed', sans-serif;
  height: 100%;
}

body {
  font-size: 18px;
  line-height: 20px;
  font-family: 'Open Sans', sans-serif;
  height: 100%;
}

*:focus {
  outline: 0;
}

a:hover {
  text-decoration: none;
}

p {
  font-size: 18px;
  line-height: 20px;
  font-family: 'Open Sans', sans-serif;
}

.no_padding {
  padding: 0;
}

#main_header {
  background: #F6F6F6;
  box-shadow: 0px 5px #B7B7B7;
  opacity: 0.9;
  height: 150px;
  width: 100%;
  z-index: 3;
  position: fixed;
}

#main_container {

}

#errors_container {
  padding-top: 180px;
}

.slight_left {
  padding-right: 80px;
}

.slight_right {
  padding-left: 80px;
}

.highlighted {
  color: white;
  background: #1896d5;
}

.highlighted a {
  color: white;
}
