html {
  overflow-x: hidden;
  font-family: 'Open Sans Condensed', sans-serif;
  height: 100%;
}

body {
  font-size: 18px;
  line-height: 20px;
  font-family: 'Open Sans', sans-serif;
  height: 100%;
}

*:focus {
  outline: 0;
}

a:hover {
  text-decoration: none;
}

.title {
  font-family: 'Montserrat', sans-serif;
  font-size: 45px;
  color: #1896d5;
  background: transparent;
  border-style: none;
  margin-top: -9px;
  margin-left: -5px;
  margin-bottom: 25px;
}

.title_alt {
  font-family: 'Montserrat', sans-serif;
  font-size: 45px;
  color: #1896d5;
  background: transparent;
  border-style: none;
  margin-top: -9px;
  margin-left: 10px;
  margin-bottom: 10px;
}

.page_blurb {
  padding-bottom: 15px;
  color: #959595;
  background: transparent;
  border-style: none;
  margin-left: 10px;
}

p {
  font-size: 18px;
  line-height: 20px;
  font-family: 'Open Sans', sans-serif;
}

input[type=text], input[type=password] {
  border-style: none;
  border: 1px solid #cdcdcd;
  padding-left: 10px;
  margin-bottom: 5px;
  height: 30px;
  padding-top: 3px;
}

.no_padding {
  padding: 0;
}

.full_width {
  width: 100%;
}

#main_header {
  background: #F6F6F6;
  box-shadow: 0px 5px #B7B7B7;
  opacity: 0.9;
  height: 150px;
  width: 100%;
  z-index: 3;
  position: fixed;
}

#errors_container {
  padding-top: 180px;
}

.slight_left {
  padding-right: 80px;
}

.slight_right {
  padding-left: 80px;
}

.highlighted {
  color: white;
  background: #1896d5;
}

.highlighted a {
  color: white;
  transition: 0.25s;
  -webkit-transition: 0.25s;
}

.highlighted a:hover {
  color: #B7B7B7;
}

.year_button {
  width: 100%;
  height: 290px;
  background-color: #1896d5;
  border-style: none;
  margin-top: 25px;
  color: white;
  font-size: 50px;
  opacity: 0.5;
  transition: 0.25s;
  -webkit-transition: 0.25s;
}

.year_button:hover {
  opacity: 1;
}
