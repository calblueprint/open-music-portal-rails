/*THIS IS THE CSS FOR THE NAVBAR. IT USES THE CALC() FUNC WHICH NOT EVERYTHING SUPPORTS. DAMN IT*/
#logo {
    position: fixed;
    top: 0px;
    left: calc(50% - 75px);
    height: 150px;
    width: 150px;
    border-style: none;
    background-image: url(<%= image_path "logo.svg" %>);
    background-color: transparent;
    background-size: 200px 200px;
    background-position: center;
    z-index: 2;
}

#search {
    position: fixed;
    top: 0px;
    left: calc(50% - 400px);
    height: 40px;
    width: 40px;
    border-style: none;
    background: #1896d5;
    z-index: 3;
}

#icon {
    float: left;
    color: white;
    font-size: 16px;
    padding-left: 6px;
    padding-bottom: 6px;
}

#text {
    position: fixed;
    top: 0px;
    left: calc(50% - 400px);
    height: 40px;
    width: 40px;
    border-style: none;
    text-indent: 15px;
    color: transparent;
    background: transparent;
    z-index: 3;
    transition: 0.5s;
    -webkit-transition: 0.5s;
}

#text:hover {
    width: 150px;
    color: white;
    background: #1896d5;
    transition: 0.5s;
    -webkit-transition: 0.5s;
}

#navback {
    position: fixed;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 150px;
    background: #F6F6F6;
    box-shadow:0px 5px #B7B7B7;
    opacity: 0.9;
    z-index: 1;
}

#outerline {
    position: fixed;
    top: 50px;
    left: calc(50% - 400px);
    width: 800px;
    height: 50px;
    border-top: 1px #B7B7B7 solid;
    border-bottom: 1px #B7B7B7 solid;
    z-index: 1;
}

#innerline {
    position: fixed;
    top: 54px;
    left: calc(50% - 400px);
    width: 800px;
    height: 42px;
    border-top: 1px #B7B7B7 solid;
    border-bottom: 1px #B7B7B7 solid;
    z-index: 1;
}

.tab {
    position: fixed;
    margin-top: 5px;
    text-align: center;
    height: 40px;
    width: 100px;
    font-family: 'Open Sans Condensed', sans-serif;
    font-size: 15px;
    border-style: none;
    color: #7D7D7D;
    background: transparent;
    z-index: 1;
    transition: color 0.5s;
    -webkit-transition: color 0.5s;
}

.tab:hover {
    color: #1896d5;
    transition: color 0.25s;
    -webkit-transition: color 0.25s;
    text-decoration: none;
}

#about {
    top: 60px;
    left: calc(50% - 375px);
}

#competition {
    top: 60px;
    left: calc(50% - 275px);
}

#winners {
    top: 60px;
    left: calc(50% - 175px);
}

#judges {
    top: 60px;
    left: calc(50% + 75px);
}

#registration {
    top: 60px;
    left: calc(50% + 175px);
}

#support {
    top: 60px;
    left: calc(50% + 275px);
}

#subtitle {
    position: fixed;
    font-family: 'Quicksand', sans-serif;
    top: 135px;
    left: calc(50% - 200px);
    height: 30px;
    width: 400px;
    font-size: 15px;
    border: 1px solid #B7B7B7;
    border-radius:4px;
    box-shadow:0px 3px #B7B7B7;
    background: #F6F6F6;
    color: #363636;
    z-index: 2;
    text-align: center;
    padding-top: 3px;
}
