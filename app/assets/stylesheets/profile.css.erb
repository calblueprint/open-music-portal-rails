#stitle {
    font-family: 'Montserrat', sans-serif;
    font-size: 45px;
    margin-left: -3px;
    padding-bottom: 30px;
    width: 500px;
    color: #1896d5;
}

#regbox {
    position:absolute;
    top: 213px;
    left: calc(50% - 250px);
    width: 650px;
    height: 400px;
    padding-left: 50px;
    font-size: 15px;
    line-height: 40px;
    background: transparent;
    z-index: -1;
}

#reg {
    float: left;
    color: #363636;
    width: 150px;
    margin-top: -13px;
    background: transparent;
}

#form {
    position:absolute;
    top: 280px;
    left: calc(50% - 100px);
    width: 650px;
    height: 560px;
    padding-left: 50px;
    font-size: 15px;
    background: transparent;
}

.input {
    margin: 5px;
    height: 30px;
    width: 140px;
    text-indent: 5px;
    border-radius: 4px;
    border: 1px solid #B7B7B7;
    opacity: 0.7;
}

.input:focus {
    opacity: 1;
}

#long {
    width: 200px;
}

#short {
    width: 80px;
}

.submit {
    position: relative;
    top: 20px;
    left: -201px;
    height: 60px;
    width: 651px;
    color: black;
    background: #EBEBEB;
    border-style: none;
}

.submit:hover {
    color: white;
    background: #1896d5;
}

#part1 {
    top: 217px;
    color: white;
    background: #1896d5;
}

#part2 {
    top: 267px;
}

#part3 {
    top: 317px;
}

#piano {
  position: absolute;
  top: 100px;
  left: calc(100% - 600px);
  width: 800px;
  height: 800px;
  background: url(<%= image_path "piano.svg" %>);
  border-style: none;
}

#sideline {
  position:absolute;
  top: 217px;
  left: calc(50% - 400px);
  box-shadow: -2px 0px #EBEBEB;
  width: 100px;
  height: 538px;
  background: transparent;
}

#scrollup {
  position:absolute;
  top: 400px;
  left: calc(50% - 400px);
  width: 500px;
  height: 25px;
  border-style: none;
  background: black;
  opacity: 0.1;
}

#scrolldown {
  position:absolute;
  top: 730px;
  left: calc(50% - 400px);
  width: 500px;
  height: 25px;
  border-style: none;
  background: black;
  opacity: 0.1;
}

#scrollup:hover, #scrolldown:hover {
  opacity: 0;
  transition: opacity 0.25s;
  -webkit-transition: opacity 0.25s;
}

#sideouterline {
    position:absolute;
    top: 217px;
    left: calc(50% - 400px);
    box-shadow: -2px 0px #EBEBEB;
    width: 100px;
    height: 250px;
    background: transparent;
}

#sideinnerline {
    position:absolute;
    top: 217px;
    left: calc(50% - 250px);
    box-shadow: -2px 0px #EBEBEB;
    width: 100px;
    height: 340px;
    background: transparent;
}

#sideotherouterline {
    position:absolute;
    top: 217px;
    left: calc(50% + 300px);
    box-shadow: 2px 0px #EBEBEB;
    width: 100px;
    height: 340px;
    background: transparent;
    z-index: -1;
}

#edit, #favorite, #message, #print {
    position: absolute;
    top: 217px;
    left: calc(50% + 175px);
    height: 46px;
    width: 46px;
    border-radius: 23px;
    border-style: none;
    background: transparent;
}

#favorite {
    left: calc(50% + 225px);
}

#message {
    left: calc(50% + 275px);
}

#print {
    left: calc(50% + 325px);
}

#edit:hover, #favorite:hover, #message:hover, #print:hover {
    background: #1896d5;
}

#editcon, #favcon, #msgcon, #printcon {
    color: #1896d5;
    height: 46px;
    width: 46px;
    padding-top: 13px;
    padding-right: 12px;
}

#editcon:hover, #favcon:hover, #msgcon:hover, #printcon:hover {
    color: white;
}

#stitle {
    font-family: 'Montserrat', sans-serif;
    font-size: 45px;
    margin-left: -3px;
    padding-bottom: 30px;
    width: 500px;
    color: #1896d5;
}


#infobox {
    position:absolute;
    top: 222px;
    left: calc(50% - 250px);
    width: 650px;
    height: 400px;
    padding-left: 50px;
    font-size: 15px;
    line-height: 25px;
    background: transparent;
    z-index: -1;
}

#info {
    float: left;
    color: #ACACAC;
    width: 150px;
    background: transparent;
}

#details {
    float: left;
    padding-left: 30px;
    color: #363636;
    width: 350px;
    background: transparent;
}

.stab {
    position: absolute;
    left: calc(50% - 400px);
    font-size: 15px;
    height: 50px;
    width: 150px;
    border-style: none;
    color: #363636;
    background: transparent;
    transition: color 0.5s;
    -webkit-transition: color 0.5s;
}

.stab:hover {
    color: #1896d5;
    transition: color 0.25s;
    -webkit-transition: color 0.25s;
}

#compete {
    top: 217px;
}

#description {
    color: white;
    background: #1896d5;
    top: 267px;
}

#contact {
    top: 317px;
}

#pieces {
    top: 367px;
}

#notes {
    top: 417px;
}
