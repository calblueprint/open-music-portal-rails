#header_border {
  background:white;
  border-bottom: black 1px solid;
}

#main_container {
  margin-top: 15px;
}

.header_button {
  border-style: none;
  font-size: 15px;
  height: 40px;
  width: 100px;
  background: #1896d5;
  color: white;
  display: inline-block;
  padding-top: 10px;
  text-align: center;
  transition: 0.25s;
  -webkit-transition: 0.25s;
}

.header_button:hover {
  color: #d02200;
}

#header_links {
  text-align: center;
  height: 100%;
  padding-top: 9px;
}

#icon {
  float: left;
  color: white;
  font-size: 16px;
  padding-left: 6px;
  padding-bottom: 6px;
}

.logo_in_nav {
  text-align: center;
  float: left;
  margin: 0;
  padding-left: 0;
  list-style: none;
}

.tab {
  display: inline-block;
  text-align: left;
  font-family: pt-sans-narrow, sans-serif;
  font-size: 20px;
  color: black;
  background: transparent;
  z-index: 1;
  margin-top: 5px;
  margin-left: -20px;
  margin-right: -20px;
}

.tab:hover {
  color: #d02200;
}

