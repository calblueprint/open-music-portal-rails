#collapse-button {
  position: fixed;
  top: 0px;
  right: 0px;
  height: 40px;
  width: 40px;
  border-style: none;
  background: black;
  z-index: 3;
}

#text {
  position: fixed;
  top: 0px;
  height: 40px;
  width: 40px;
  border-style: none;
  text-indent: 15px;
  color: transparent;
  background: transparent;
  z-index: 3;
  transition: 0.5s;
  -webkit-transition: 0.5s;
}

#text:hover {
  width: 150px;
  color: white;
  background: #1896d5;
  transition: 0.5s;
  -webkit-transition: 0.5s;
}

#logo {
  text-align: left;
}

#image {
  position: absolute;
  top: -12px;
  left: 470px;
}

#usomc {
  margin-top: 20px;
  padding-top: 20px;
  margin-left: -10px;
  height: 100px;
  border-style: none;
  background: transparent;
  font-size: 100px;
  font-family: serif;
}

#subtitle {
  margin-top: 57px;
  margin-left: -30px;
  text-align: left;
  width: 100px;
  line-height: 15px;
  border-style:none;
  background: transparent;
  font-size: 15px;
  color: black;
  opacity: 0.5;
  font-weight: 600;
}

@media (max-width: 1300px) {
  #subtitle {
    display: none;
  }
}

@media (max-width: 767px) {
  .user_greeting {
    margin-right: 60px;
  }
}