#main_header {
  background: white;
  width: 100%;
  z-index: 3;
  position: fixed;
  text-align: center;
}

#header_bottom_border {
  border-bottom: 1px solid #2F2F2F;
}

#main_container {
  margin: 0px;
  margin-top: 15px;
}

#diamond_row {
  position: absolute;
  top: 20px;
  left: 0px;
  width: 100%;
  z-index: 1;
}

#diamond {
  margin: auto;
  width: 90px;
  height: 90px;
  background: #2F2F2F;
  transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  cursor: pointer;
}

#diamond_title_row {
  position: absolute;
  top: 47px;
  left: 0px;
  width: 100%;
  z-index: 1;
}

#diamond_title {
  margin: auto;
  padding: 0px;
  margin: 0px;
  font-family: 'Josefin Sans', sans-serif;
  font-size: 25px;
  color: white;
  cursor: pointer;
  background: transparent;
}

.tab {
  display: inline-block;
  font-family: Montserrat, sans-serif;
  padding-top: 11px;
  font-size: 15px;
  color: black;
  opacity: 0.5;
  background: transparent;
  z-index: 2;
}

.tab:hover {
  color: black;
  opacity: 1;
}

.highlighted {
  background: #EFEFEF;
}

#collapse-button {
  position: fixed;
  font-size: 16px;
  color: black;
  top: 0px;
  right: 0px;
  height: 40px;
  width: 40px;
  border-style: none;
  background: transparent;
  z-index: 3;
}

.navbar-nav > li {
  height: 41px;
}

.nav > li > a:hover, .nav > li > a:focus {
  background-color: transparent;
}

.navbar-nav > li > a {
  padding-top: 11px;
  padding-left: 40px;
  padding-right: 40px;
}

.navbar-toggle {
  padding: 2px 6px 3px;
  border-radius: 0px;
  margin-top: 0px;
  margin-bottom: 0px;
}

@media (min-width: 768px) and (max-width: 992px) {
  .navbar-nav > li > a {
    padding-left: 15px;
    padding-right: 15px;
  }
}

#greeting {
  position: absolute;
  top: 10px;
  width: 1200px;
  z-index: 5;
}

.header_button {
  border-style: none;
  font-family: 'Roboto', sans-serif;
  font-size: 15px;
  color: black;
  opacity: 0.5;
  display: inline-block;
  padding-left: 10px;
  text-align: center;
}

.header_button:hover {
  color: black;
  opacity: 1;
}

