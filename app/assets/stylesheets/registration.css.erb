html {
    overflow-x: hidden;
}

#registration {
    color: white;
    background: #1896d5;
}

#competition {
    color: #7D7D7D;
    background: transparent;
}

*:focus {
    outline: 0;
}

#container {
    width: 800px;
    height: 1300px;
    margin: auto;
    font-family: 'Open Sans', sans-serif;
}

#stitle {
    font-family: 'Montserrat', sans-serif;
    font-size: 45px;
    margin-left: -3px;
    padding-bottom: 30px;
    width: 500px;
    color: #1896d5;
}

#regbox {
    position:absolute;
    top: 213px;
    left: calc(50% - 250px);
    width: 650px;
    height: 400px;
    padding-left: 50px;
    font-size: 15px;
    line-height: 40px;
    background: transparent;
    z-index: -1;
}

#reg {
    float: left;
    color: #363636;
    width: 150px;
    margin-top: -13px;
    background: transparent;
}

#form {
    position:absolute;
    top: 280px;
    left: calc(50% - 100px);
    width: 650px;
    height: 560px;
    padding-left: 50px;
    font-size: 15px;
    background: transparent;
}

.input {
    margin: 5px;
    height: 30px;
    width: 140px;
    text-indent: 5px;
    border-radius: 4px;
    border: 1px solid #B7B7B7;
    opacity: 0.7;
}

.input:focus {
    opacity: 1;
}

#long {
    width: 200px;
}

#short {
    width: 80px;
}

.submit {
    position: relative;
    top: 20px;
    left: -201px;
    height: 60px;
    width: 651px;
    color: black;
    background: #EBEBEB;
    border-style: none;
}

.submit:hover {
    color: white;
    background: #1896d5;
}

#sideouterline {
    position:absolute;
    top: 217px;
    left: calc(50% - 400px);
    box-shadow: -2px 0px #EBEBEB;
    width: 100px;
    height: 150px;
    background: transparent;
}

#sideinnerline {
    position:absolute;
    top: 217px;
    left: calc(50% - 250px);
    box-shadow: -2px 0px #EBEBEB;
    width: 100px;
    height: 623px;
    background: transparent;
}

#sideotherouterline {
    position:absolute;
    top: 217px;
    left: calc(50% + 300px);
    box-shadow: 2px 0px #EBEBEB;
    width: 100px;
    height: 623px;
    background: transparent;
    z-index: -1;
}


.stab {
    position: absolute;
    left: calc(50% - 400px);
    font-size: 15px;
    height: 50px;
    width: 150px;
    border-style: none;
    color: #363636;
    background: transparent;
    transition: color 0.5s;
    -webkit-transition: color 0.5s;
}

.stab:hover {
    color: #1896d5;
    transition: color 0.25s;
    -webkit-transition: color 0.25s;
}

#part1 {
    top: 217px;
    color: white;
    background: #1896d5;
}

#part2 {
    top: 267px;
}

#part3 {
    top: 317px;
}
