#piano {
  position: absolute;
  top: 0px;
  left: 0px;
  height: 680px;
  width: 100%;
  background-image: url(<%= image_path "piano.jpg"%>);
  background-size: cover;
}

#piano_title {
  position: absolute;
  top: 35px;
  left: 0px;
  height: 550px;
  width: 100%;
  background-image: url(<%= image_path "piano.svg"%>);
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.home_divider {
  position: relative;
  top: -20px;
  left: 25px;
  float: left;
  height: 160px;
  border-left: 2px solid #EBEBEB;
}

.home_title {
  float: left;
  padding-left: 0px;
  font-family: 'Josefin Sans', sans-serif;
  margin-top: -22px;
  font-color: #2F2F2F;
  font-size: 50px;
}

#home_container {
  margin-top: 690px;
}

.left {
  width: 150px;
}

.center {
  margin-left: 50px;
  width: 155px;
}

.right {
  width: 170px;
  margin-left: 55px;
}

#info {
  padding-top: 35px;
  text-align: center;
  color: white;
}

#info_back {
  position: absolute;
  top: 915px;
  left: 0px;
  height: 480px;
  width: 100%;
  background: #2F2F2F;
}

#info_title {
  padding-top: 50px;
  text-align: center;
  color: white;
}

#button_row {
  position: absolute;
  top: 505px;
  width: 100%;
  height: 50px;
  text-align: center;
  z-index: 2;
}

#button {
  margin: auto;
  font-family: Montserrat, sans-serif;
  width: 150px;
  color: white;
  height: 22px;
  font-size: 15px;
  letter-spacing: 3px;
  border: white solid 1px;
  transition: 0.25s;
  -webkit-transition: 0.25s;
}

#button:hover {
  background: rgba(255, 255, 255, 0.5);
  cursor: pointer;
}

@media (max-width: 1650px) {
  #piano {
    height: 550px;
  }
  #piano_title {
    top: -10px;
    height: 500px;
  }
  #button_row {
    top: 420px;
  }
  #home_container {
    margin-top: 560px;
  }
  #info_back {
    top: 790px;
  }
}

@media (max-width: 1200px) {
  #piano {
    height: 100%;
  }
  #home_container {
    display: none;
  }
  #info_back {
    display: none;
  }
}
