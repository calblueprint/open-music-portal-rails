/*THESE ARE ANIMATIONS*/
@keyframes fade
{
        0% {background: url(img/stock1.jpg);}
        20% {background: url(img/stock1.jpg);}
        33% {background: url(img/stock2.jpg);}
        53% {background: url(img/stock2.jpg);}
        66% {background: url(img/stock3.jpg);}
        86% {background: url(img/stock3.jpg);}
        100% {background: url(img/stock1.jpg);}
}

@-webkit-keyframes fade
{
        0% {background: url(img/stock1.jpg);}
        20% {background: url(img/stock1.jpg);}
        33% {background: url(img/stock2.jpg);}
        53% {background: url(img/stock2.jpg);}
        66% {background: url(img/stock3.jpg);}
        86% {background: url(img/stock3.jpg);}
        100% {background: url(img/stock1.jpg);}
}

