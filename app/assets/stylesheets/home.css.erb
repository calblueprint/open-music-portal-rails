.link_box {
  margin-left: -10px;
  width: 830px;
}

.status {
  float: left;
  height:100px;
  font-family: bebas-neue, sans-serif;
  font-size: 100px;
  color: black;
  opacity: 0;
  background: transparent;
  border-style: none;
  margin-top: -16px;
  margin-left: 10px;
}

.quick_link {
  float: left;
  height:100px;
  font-family: bebas-neue, sans-serif;
  font-size: 100px;
  color: black;
  background: transparent;
  border-style: none;
  margin-top: -16px;
  margin-left: 10px;
}

.quick_link:hover {
  cursor: pointer;
  color: #d02200;
}

.quick_link:hover + .status {
  opacity: 0.25;
}

