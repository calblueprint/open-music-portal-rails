.title {
  font-family: 'Montserrat', sans-serif;
  font-size: 45px;
  color: #1896d5;
  background: transparent;
  border-style: none;
  margin-top: -9px;
  margin-left: -5px;
  margin-bottom: 25px;
}

#home_title {
  margin-left: 10px;
  margin-bottom: 10px;
}

#home_page_blurb {
  padding-bottom: 15px;
  color: #959595;
  background: transparent;
  border-style: none;
  margin-left: 10px;
}

.left_border {
  border-left: 2px solid #EBEBEB;
}

#announcements {
  height: 500px;
  overflow-y: scroll;
}

.announcement {
  padding-top: 10px;
  min-height: 60px;
}

.description {
  font-size: 14px;
  line-height: 16px;
  height: 50px;
  display: inline-block;
  width: 370px;
  margin-left: 20px;
  padding-top: 10px;
}

.date {
  border-radius: 25px;
  font-size: 15px;
  height: 50px;
  width: 50px;
  padding-top: 13px;
  display: inline-block;
  text-align: center;
  border-style: none;
  color: white;
  background: #1896d5;
}

#piano {
  position: absolute;
  top: 75px;
  right: -125px;
  width: 1000px;
  height: 1000px;
  background: url(<%= image_path "piano.svg" %>);
  background-size: cover;
  border-style: none;
}

@media (max-width: 1300px) {
  #piano {
    display: none;
  }
}
