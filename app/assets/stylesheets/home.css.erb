.link_box {
  margin-top: 40px;
  margin-left: 100px;
  width: 900px;
}

#home_title {
  padding: 0px;
  margin: 0px;
  font-family: 'Josefin Sans', sans-serif;
  font-size: 203px;
  color: white;
  background: transparent;
  border-style: none;
  margin-top: 70px;
  margin-left: 90px;
}

#sub_title {
  padding: 0px;
  margin: 0px;
  font-family: 'Josefin Sans', sans-serif;
  font-size: 34px;
  color: white;
  background: transparent;
  border-style: none;
  margin-left: 105px;
}

.status {
  float: left;
  padding: 0px;
  margin: 0px;
  height: 55px;
  font-family: 'Josefin Sans', sans-serif;
  font-size: 70px;
  color: white;
  opacity: 0;
  background: transparent;
  border-style: none;
}

.quick_link {
  float: left;
  padding: 0px;
  margin: 0px;
  height: 55px;
  font-family: 'Josefin Sans', sans-serif;
  font-size: 70px;
  color: white;
  opacity: 0.5;
  background: transparent;
  border-style: none;
}

.quick_link:hover {
  cursor: pointer;
  opacity: 1;
}

.quick_link:hover + .status {
  opacity: 0.25;
}

