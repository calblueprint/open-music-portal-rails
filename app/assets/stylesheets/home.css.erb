#container {
    width: 800px;
    margin: auto;
    font-family: 'Open Sans', sans-serif;
}

#container {
    margin-top: 200px;
}

#display {
    width: 800px;
    height: 480px;
    font-size: 0px;
    border-style:none;
    border-radius:4px;
    box-shadow:0px 3px #D7D7D7;
    animation: fade 12s infinite;
    -webkit-animation: fade 12s infinite;
}

#paragraph {
    margin-top: 20px;
    padding: 25px;
    font-size: 14px;
    line-height: 24px;
    background: #EBEBEB;
    border-radius:4px;
    box-shadow:0px 3px #D7D7D7;
}

#copyright {
    border-top: 1px solid #B7B7B7;
    width: 800px;
    height: 100px;
    margin: auto;
}

#copyright {
    margin-top: 20px;
}

#signature {
    position: relative;
    font-size: 12px;
    top: 14px;
    left: calc(50% + 157px);
    color: #ACACAC;
}

/*THESE ARE ANIMATIONS*/
@keyframes fade
{
    0% {background: url(<%= asset_path 'stock1.jpg' %>);}
    20% {background: url(<%= asset_path 'stock1.jpg' %>);}
    33% {background: url(<%= asset_path 'stock2.jpg' %>);}
    53% {background: url(<%= asset_path 'stock2.jpg' %>);}
    66% {background: url(<%= asset_path 'stock3.jpg' %>);}
    86% {background: url(<%= asset_path 'stock3.jpg' %>);}
    100% {background: url(<%= asset_path 'stock1.jpg' %>);}
}

@-webkit-keyframes fade
{
    0% {background: url(<%= asset_path 'stock1.jpg' %>);}
    20% {background: url(<%= asset_path 'stock1.jpg' %>);}
    33% {background: url(<%= asset_path 'stock2.jpg' %>);}
    53% {background: url(<%= asset_path 'stock2.jpg' %>);}
    66% {background: url(<%= asset_path 'stock3.jpg' %>);}
    86% {background: url(<%= asset_path 'stock3.jpg' %>);}
    100% {background: url(<%= asset_path 'stock1.jpg' %>);}
}

