#piano {
  position: absolute;
  top: 85px;
  left: 0px;
  height: 450px;
  width: 100%;
  background-image: url(<%= image_path "piano.jpg"%>);
  background-size: cover;
}

#piano_title {
  position: absolute;
  top: 85px;
  left: 0px;
  height: 450px;
  width: 100%;
  background-image: url(<%= image_path "piano.svg"%>);
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.home_divider {
  position: relative;
  top: -20px;
  left: 25px;
  float: left;
  height: 160px;
  border-left: 2px solid #EBEBEB;
}

.home_title {
  float: left;
  padding-left: 0px;
  font-family: 'Josefin Sans', sans-serif;
  margin-top: -22px;
  font-color: #2F2F2F;
  font-size: 50px;
}

#home_container {
  margin-top: 460px;
}

.left {
  width: 150px;
}

.center {
  margin-left: 50px;
  width: 155px;
}

.right {
  width: 170px;
  margin-left: 55px;
}

#credits {
  padding-top: 35px;
  text-align: center;
  color: white;
}

#home_address {
  padding-top: 75px;
  text-align: left;
}

#credits_back {
  position: absolute;
  top: 770px;
  left: 0px;
  height: 680px;
  width: 100%;
  background: #2F2F2F;
}

#credits_title {
  padding-top: 50px;
  text-align: center;
  color: white;
}

@media (max-width: 1200px) {
  #piano {
    height: 100%;
  }
  #piano_title {
    height: 100%;
  }
  #home_container {
    display: none;
  }
}