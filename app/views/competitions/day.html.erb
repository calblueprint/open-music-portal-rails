<div class="content_container">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <h1 class="title"><%= @competition.name %> - <%= @day.name %></h1>

          <div class="col-md-1"></div>
          <%= render partial: 'shared/calendar/time_bar', locals: {hours: @day.competition.hours} %>

          <div class="col-md-10">
            <%= render partial: 'shared/calendar/day', locals: {events: @day.events} %>
          </div>

          <div class="col-md-1"></div>
        </div>
      </div>
    </div>
  </div>
</div>
