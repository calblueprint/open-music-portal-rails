<div class="content_container">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <table>
          <tr>
            <th>ID</th>
            <th>Name</th>
          </tr>
          <% @events.each do |event| %>
          <tr>
            <td><%= event.id %></td>
            <td><%= event.name  %></td>
            <td class="divider"><%= link_to "Show", event %></td>
            <% if current_user!= nil and current_user.has_role?(:admin) %>
              <td class="divider"><%= link_to "Edit",  edit_event_path(event)%></td>
            <% end %>
          </tr>
          <% end %>
        </table>
        <%= will_paginate(@events, :renderer => WillPaginate::ActionView::LinkRenderer) %>
      </div>
    </div>
  </div>
</div>
