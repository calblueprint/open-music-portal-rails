<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="title">Admin Dashboard</h1>

      <%= render partial: 'shared/errors' %>

      <div class="row">
        <div class="col-md-3">
          <ul class="no-bullets with-buttons no-padding">
            <li><%= link_to "Manage Users", admin_users_path, class: 'btn btn-primary btn-lg btn-block' %></li>
            <li><%= link_to "Create a new Competition", new_admin_competition_path, class: 'btn btn-primary btn-lg btn-block' %></li>
          </ul>
        </div>

        <div class="col-md-3">
          <ul class="no-bullets with-buttons no-padding">
            <li><%= link_to "Manage Categories", admin_categories_path, class: 'btn btn-primary btn-lg btn-block' %></li>
            <li><%= link_to "Create a Category", new_admin_category_path, class: 'btn btn-primary btn-lg btn-block' %></li>
          </ul>
        </div>

        <div class="col-md-3">
          <ul class="no-bullets with-buttons no-padding">
            <li><%= link_to "Manage Events", admin_events_path, class: 'btn btn-primary btn-lg btn-block' %></li>
            <li><%= link_to "Create an Event", new_admin_display_event_path, class: 'btn btn-primary btn-lg btn-block' %></li>
          </ul>
        </div>

        <div class="col-md-3">
          <ul class="no-bullets with-buttons no-padding">
            <li><%= link_to "Manage Pieces", admin_pieces_path, class: 'btn btn-primary btn-lg btn-block' %></li>
            <li><%= link_to "Create a Piece", new_admin_piece_path, class: 'btn btn-primary btn-lg btn-block' %></li>
          </ul>
        </div>

      </div>
    </div>
  </div>
</div>
