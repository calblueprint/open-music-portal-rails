<div class="content_container">
  <div class="container">
    <div class="row" id="user_profile">

      <div class="col-md-9" id="main_user_info">
        <h1 class="title"><%= @display_event.name %></h1>

        <div class="row">
          <div class="col-md-3">
            <ul class="list_user_labels">
               <li class="user_info_label">Name:</li>
               <li class="user_info_label">Number of Pieces:</li>
               <li class="user_info_label">Max Time (min):</li>
               <li class="user_info_label">Closed:</li>
            </ul>
          </div>
          <div class="col-md-3">
          <%= form_for(@display_event, html: {id: "form"}, url: admin_display_event_path(@display_event)) do |f| %>
            <ul class="list_user_values">
              <li class="user_input_value"><%= f.text_field :name, :placeholder => "Name" %></li>
              <li class="user_input_value"><%= f.text_field :num_pieces, :placeholder => "Number of Pieces" %></li>
              <li class="user_input_value"><%= f.text_field :max_time, :placeholder => "Max Time" %></li>
            </ul>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <%= f.submit "continue", class: "submit" %>
          </div>
        </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
