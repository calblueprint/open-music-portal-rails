<div class="content_container">
  <div class="container">
    <div class="row" id="user_profile">
      <div class="col-md-3 no_padding" id="user_sidebar">
        <ul class="profile_component_links">
          <li class="highlighted"><%= link_to "profile", profile_path %></li>
          <li><%= link_to "competitions", profile_path %></li>
          <li><%= link_to "pieces", profile_path %></li>
          <li><%= link_to "notes", profile_path %></li>
        </ul>
      </div>

      <div class="col-md-9" id="main_user_info">
        <h1 class="title"><%= @user.first_name %> <%= @user.last_name %></h1>

        <div class="row">
          <div class="col-md-3">
            <ul class="list_user_labels">
              <li class="user_info_label">First Name:</li>
              <li class="user_info_label">Last Name:</li>
              <li class="user_info_label">Country:</li>
              <li class="user_info_label">Address</li>
            </ul>
          </div>
          <div class="col-md-3">
          <%= form_for(@user, url: admin_update_path(@user.id), html: {method: "patch"}) do |f| %>
            <ul class="list_user_values">
              <li class="user_input_value"><%= f.text_field :first_name, :placeholder => "First" %></li>
              <li class="user_input_value"><%= f.text_field :last_name, :placeholder => "Last" %></li>
              <li class="user_input_value"><%= f.date_field :date_of_birth, :placeholder => "Date of Birth" %></li>
              <li class="user_input_value"><input type="text" placeholder="First"></li>
              <li class="user_input_value"><input type="text" placeholder="Last"></li>
              <li class="user_input_value"><%= f.text_field :country, :placeholder => "Country"%></li>
              <li class="user_input_value"><%= f.text_field :street_address, :placeholder => "Address"%></li>
              <li class="user_input_value"><%= f.text_field :city, :placeholder => "City"%></li>
              <li class="user_input_value"><%= f.text_field :state, :placeholder => "State"%></li>
              <li class="user_input_value"><%= f.text_field :zip_code, :placeholder => "Zip/Postal Code"%></li>
              <li class="user_input_value"><%= f.text_field :phone_number, :placeholder => "Phone Number"%></li>
              <li class="user_input_value"><%= f.text_field :email, :placeholder => "Email"%></li>
              <li class="user_input_value"><input type="text" placeholder="First"></li>
              <li class="user_input_value"><input type="text" placeholder="Last"></li>
              <% @events.includes(:display_event).each do |event| %>
                <%= check_box_tag "user[event_ids][]", event.id, @user.events.include?(event) %>
                <%= event.name %>
              <% end %>
              <div>
            </ul>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <%= f.submit "continue", class: "submit" %>
          </div>
        </div>

       <% end %>

      </div>
    </div>
  </div>
</div>
