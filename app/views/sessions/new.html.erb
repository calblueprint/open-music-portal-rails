<% provide(:title, "Sign In") %>

<div class="container">
  <div class="row blurb">
    <div class="col-md-6 col-md-offset-3  ">
      <h1 class="title">- LOGIN -</h1>
      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.label :email, class: "form_label" %>
        <%= f.text_field :email, placeholder: "Email", class: "full_width login_text_field" %><br>

        <%= f.label :password, class: "form_label" %>
        <%= f.password_field :password, placeholder: "Password", class: "full_width login_text_field" %>

        <div class="submit_button_container">
          <%= f.submit "- SIGN IN -", class: "submit" %>
        </div>
      <% end %>

      <p>New user? <%= link_to "Register now!", registration_path, class: "admin_link" %></p>
      <p>Forgot your password? <%= link_to "Click here.", new_password_reset_path, class: "admin_link" %></p>
    </div>
  </div>
</div>
