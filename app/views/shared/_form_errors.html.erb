    <div class="row">
      <div class="col-md-12">
        <div class="alert alert-danger" id="error_explanation">
          <h2 class="error-heading"><%= pluralize(errors.count, 'error') %> prohibited this form from being saved:</h2>
          <ul>
          <% errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
