<div class="row">
  <div class="col-md-12">
    <div class="row">

      <div class="col-md-1">
      </div>

      <%= render partial: 'shared/calendar/time_bar', locals: {hours: hours} %>
      <% days.limit(5).each do |day| %>
        <div class="col-md-2 day-view">
          <%= link_to day.name, competition_day_path(day_id: day.id) %>
          <%= render partial: 'shared/calendar/day', locals: {events: day.events} %>
        </div>
      <% end %>

      <div class="col-md-1">
      </div>
  </div>
</div>
